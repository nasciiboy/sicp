     ?y)]@c(?x)@c(?y)@c(?y)@c(?x)@c(?y)@c(?x)@c(equal?)@c(unify-match)

#      ..src > scheme
#        (define (extend-if-possible var val frame)
#          (let ((binding (binding-in-frame var frame)))
#            (cond (binding
#                   (unify-match
#                    (binding-value binding) val frame))
#                  ((var? val)                   ; ***
#                   (let ((binding
#                          (binding-in-frame
#                           val
#                           frame)))
#                     (if binding
#                         (unify-match
#                          var
