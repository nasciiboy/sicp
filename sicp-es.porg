#         ..src > scheme
#           (define paul-acc
#             (make-joint peter-acc
#                         'open-sesame
#                         'rosebud))
#         < src..
        ..src > scheme
          (define paul-acc
            (make-joint peter-acc
                        'open-sesame
                        'rosebud))
        < src..

